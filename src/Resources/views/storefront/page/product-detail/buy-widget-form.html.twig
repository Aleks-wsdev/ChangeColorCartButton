{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget-form.html.twig' %}

{% block page_product_detail_buy_button %}
	{% if page.btnColor %}
		<div class="d-grid">
			<button class="btn btn-primary btn-buy" style="background-color: {{page.btnColor}} " title="{{ "detail.addProduct"|trans|striptags }}" aria-label="{{ "detail.addProduct"|trans|striptags }}">
				{{ "detail.addProduct"|trans|sw_sanitize }}
			</button>
		</div>
	{% else %}
		{{ parent() }}
	{% endif %}
{% endblock %}
